@import 'jeet'
//edit()



#projectSortMenu
  column(1/3)
  //Fix this shit
  shift(1/3.7)
  text-align: center
  padding-bottom: 10px
  border-bottom: 5px solid #9CC0EC


#projectTiles
  span(7/8)
  .cards
    column(9/10)
    shift(.5/10)
    
    .card
      column(1/4 9/10, cycle: 4)
      height: 150px
      .bottom
        position: absolute
        bottom: 0


.card
  .removeLable
    display: none
    opacity: 0
    float: right
    font-size: 1.8em
    cursor: pointer
    color: red
    transition: all 0.5s ease-in-out;
    &:hover
      animation: pulse 1s infinite
      color: lighten(red, 10);
      transition: all 0.5s ease-in-out;
  .content
    .cardHeader
      span(5/6)
      //shift(-1/6)
  //Go To Project lable

.goToProject
  cursor: pointer
  text-align: center
  transition: all 0.2s ease-in-out;
  &:hover
    transition: all 0.2s ease-in-out;
    background: #98D89D
    color: white