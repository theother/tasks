@import 'jeet'
//edit()


.anti-modal-box
  align(horizontal)
  width: 1200px

.ap_closeMdoal
  float: right
  cursor: pointer;
  &:hover
    color: red;

.ap_titleHeader
  align(horizontal)
  margin-bottom: 50px


#ap_formContainer
  cf()
  height: 100%;
  min-height: 456px; 
  transition: all 0.5s ease-in-out;

#ap_inputContainer
  margin-top: 50px !important

.ap_leftSegment
  column(1/2)
  padding-bottom: 10px;

.ap_rightSegment
  column(1/2)

  
#ap_Cancle
  transition: all 0.5s ease-in-out;
  &:hover
    background: red
    color: white
    transition: all 0.5s ease-in-out;

#ap_Success
  column(1/1)
  text-align: center
  //margin-top: 50px !important
  font-size: 4em
  color: rgb(134, 213, 134)
  transition: all 0.5s ease-in-out;
  
#ap_SuccessContainer
  display: none;
  #ap_SuccessText
    column(1/1)
    opacity: 0
    text-align: center
    font-size: 9em
    color: rgb(134, 213, 134)


#ap_ErrorMessage
  opacity: 0
  min-height: 0 
  padding: 0em
  .header
    opacity: 0;